<main class="flex-shrink-0 m-auto">
  <div class="container mx-auto">
    <div class="col">
      <div class="card h-100 bg-dark" style="max-width: 600px">
        <img
          src="<%= item.image %>"
          class="card-img-top"
          alt="<%= item.title %>"
          width="100%"
          height="80%"
        />
        <div class="card-body">
          <h5 class="card-title text-warning mb-3"><%= item.title %></h5>
          <h6 class="card-subtitle mb-2 text-white">
            <i class="bi bi-heart-fill text-danger"></i> <%= item.likes.length
            %>
          </h6>
          <p class="card-text text-white">
            By
            <a href="/profile/<%= item.user._id %>" class="text-warning"
              ><%= item.user.displayname %></a
            >
          </p>
          <p class="card-text text-white"><%= item.description %></p>
        </div>
        <div class="card-footer">
          <span class="badge text-bg-warning"><%= item.itemType %></span>
        </div>
      </div>
    </div>
  </div>
</main>

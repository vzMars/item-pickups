<main class="flex-shrink-0 my-auto">
  <div class="container my-5">
    <div class="row row-cols-1 row-cols-md-3 g-4 my-5">
      <% items.forEach(item => { %>
      <div class="col">
        <div class="card h-100 bg-dark">
          <img
            src="<%= item.image %>"
            class="card-img-top"
            alt="<%= item.title %>"
            width="100%"
            height="80%"
          />
          <div class="card-body">
            <h5 class="card-title text-warning mb-3"><%= item.title %></h5>
            <h6 class="card-subtitle mb-2 text-white">
              <i class="bi bi-heart-fill text-danger"></i> <%= item.likes.length
              %>
            </h6>
            <p class="card-text text-white">
              By
              <a href="/profile/<%= item.user._id %>" class="text-warning"
                ><%= item.user.displayname %></a
              >
            </p>
            <p class="card-text text-white"><%= item.description %></p>
            <a href="/item/<%= item._id %>" class="btn btn-warning fw-semibold"
              >View Item</a
            >
          </div>
          <div class="card-footer">
            <span class="badge text-bg-warning"><%= item.itemType %></span>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>
